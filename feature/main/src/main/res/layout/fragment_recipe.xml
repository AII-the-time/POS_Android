<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".recipe.RecipeFragment">

    <data>

        <variable
            name="recipeViewModel"
            type="org.swm.att.home.recipe.RecipeViewModel" />

        <import type="android.view.View" />

        <import type="org.swm.att.common_ui.util.Formatter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/back_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cg_menu_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="40dp"
            app:singleSelection="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cl_category_with_menus"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_category_with_menus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cg_menu_categories"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cl_menu_detail">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="에스프레소 메뉴(7건)"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="@color/black"
                android:textCursorDrawable="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:enabled="false"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/rv_category_menu_list"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_modify_category"/>

            <TextView
                android:id="@+id/tv_modify_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_modify_category_name"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toEndOf="@id/edt_category_name"
                app:layout_constraintTop_toTopOf="@id/edt_category_name"
                app:layout_constraintBottom_toBottomOf="@id/edt_category_name"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_no_menu_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_trans"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/tv_no_menu_des"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/edt_category_name"
                app:layout_constraintBottom_toTopOf="@id/btn_register_menu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_category_menu_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/edt_category_name"
                app:layout_constraintBottom_toTopOf="@id/btn_register_menu"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_register_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingStart="19dp"
                android:paddingEnd="19dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_oval_stroke"
                app:layout_constraintTop_toBottomOf="@id/rv_category_menu_list"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/iv_add_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_bk_mdpi"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_register_menu"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_register_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/tv_register_menu"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_add_menu"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_menu_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="10dp"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintTop_toBottomOf="@id/cg_menu_categories"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/cl_category_with_menus"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_category_no_item"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="@{recipeViewModel.selectedCategory == null ? View.VISIBLE: View.INVISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{recipeViewModel.selectedCategory == null ? View.INVISIBLE: View.VISIBLE}">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_menu_name_and_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintBottom_toTopOf="@id/nst_register_menu_section"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_menu_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:backgroundTint="@color/black"
                        android:enabled="false"
                        android:hint="@string/edt_register_menu_name"
                        android:maxLength="15"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="@{recipeViewModel.selectedMenuInfo.menuName}"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/cl_menu_price"
                        app:layout_constraintHorizontal_weight="5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="@string/edt_register_menu_name" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_menu_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="2"
                        app:layout_constraintStart_toEndOf="@id/edt_menu_name"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_menu_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/black"
                            android:enabled="false"
                            android:gravity="end"
                            android:hint="@string/edt_register_menu_price"
                            android:maxLength="15"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="@{Formatter.INSTANCE.getStringBaseCurrencyUnit(recipeViewModel.selectedMenuInfo.price.toString())}"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@color/black"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tv_price_unit_des"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="6,000" />

                        <TextView
                            android:id="@+id/tv_price_unit_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_price_unit"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/edt_menu_price"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nst_register_menu_section"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@id/cl_menu_btns"
                    app:layout_constraintTop_toBottomOf="@id/cl_menu_name_and_price">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_register_recipe_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:text="@string/tv_register_recipe_des"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/divider_menu_recipe_section"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/divider_menu_recipe_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toTopOf="@id/cl_menu_recipe_section"
                            app:layout_constraintTop_toBottomOf="@id/tv_register_recipe_des" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_menu_recipe_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            app:layout_constraintBottom_toTopOf="@id/tv_register_menu_option_des"
                            app:layout_constraintTop_toBottomOf="@id/divider_menu_recipe_section">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_recipe_col_des"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                app:layout_constraintBottom_toTopOf="@id/rv_menu_recipe"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/tv_recipe_name_des"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_recipe_name_des"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/tv_recipe_amount_des"
                                    app:layout_constraintHorizontal_weight="3"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tv_recipe_amount_des"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_recipe_amount_des"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="@id/tv_recipe_unit_des"
                                    app:layout_constraintHorizontal_weight="1"
                                    app:layout_constraintStart_toEndOf="@id/tv_recipe_name_des"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tv_recipe_unit_des"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_recipe_unit_des"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/btn_add_recipe"
                                    app:layout_constraintHorizontal_weight="1"
                                    app:layout_constraintStart_toEndOf="@id/tv_recipe_amount_des"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_add_recipe"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/ic_system_plus_mdpi"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/tv_recipe_unit_des"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <TextView
                                android:id="@+id/tv_no_menu_recipe_des"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_no_menu_recipe_des"
                                android:textColor="@color/main_trans"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:visibility="invisible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/cl_recipe_col_des" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_menu_recipe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:nestedScrollingEnabled="false"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/cl_recipe_col_des" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/tv_register_menu_option_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:text="@string/tv_register_option_des"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/divider_menu_option_section"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cl_menu_recipe_section" />

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/divider_menu_option_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toTopOf="@id/cl_menu_option_section"
                            app:layout_constraintTop_toBottomOf="@id/tv_register_menu_option_des" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_menu_option_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/divider_menu_option_section">

                            <TextView
                                android:id="@+id/tv_no_menu_option_des"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_no_menu_option_des"
                                android:textColor="@color/main_trans"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:visibility="invisible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_menu_options"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:nestedScrollingEnabled="false"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.core.widget.NestedScrollView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_menu_btns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nst_register_menu_section">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_modify_recipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_round_stroke"
                        android:paddingStart="30dp"
                        android:paddingTop="9dp"
                        android:paddingEnd="30dp"
                        android:paddingBottom="9dp"
                        android:text="@string/btn_modify_menu"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_delete_recipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/shape_round_8"
                        android:backgroundTint="@color/main_color"
                        android:paddingStart="50dp"
                        android:paddingTop="9dp"
                        android:paddingEnd="50dp"
                        android:paddingBottom="9dp"
                        android:text="@string/btn_delete_menu"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btn_modify_recipe"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_register_recipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/shape_round_8"
                        android:backgroundTint="@color/main_color"
                        android:paddingStart="50dp"
                        android:paddingTop="9dp"
                        android:paddingEnd="50dp"
                        android:paddingBottom="9dp"
                        android:text="@string/btn_register_menu"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>