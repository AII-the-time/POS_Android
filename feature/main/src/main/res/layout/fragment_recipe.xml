<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".recipe.RecipeFragment">

    <data>

        <variable
            name="recipeViewModel"
            type="org.swm.att.home.recipe.RecipeViewModel" />

        <variable
            name="menuWithRecipe"
            type="org.swm.att.domain.entity.response.MenuWithRecipeVO" />

        <import type="android.view.View" />

        <import type="org.swm.att.common_ui.util.Formatter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/back_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cg_menu_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="40dp"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cl_category_with_menus"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_category_with_menus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cg_menu_categories"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cl_menu_detail">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_category_name_with_menu_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/cl_new_item"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cl_category_modify_buttons">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="에스프레소 메뉴"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textCursorDrawable="@null"
                    android:enabled="false"
                    android:maxLines="1"
                    android:maxLength="10"
                    setEditTextStyleByIsModify="@{recipeViewModel.isCategoryModify}"
                    android:backgroundTint="@{recipeViewModel.isCategoryModify ? @color/main_trans : @color/white}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_menu_size"/>

                <TextView
                    android:id="@+id/tv_menu_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:text="(7건)"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/edt_category_name"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_category_modify_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/cl_category_name_with_menu_count"
                app:layout_constraintTop_toTopOf="@id/cl_category_name_with_menu_count"
                app:layout_constraintBottom_toBottomOf="@id/cl_category_name_with_menu_count"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_category_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/tv_modify_category_name"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:visibility="@{recipeViewModel.selectedCategory == null || recipeViewModel.isCategoryModify ? View.GONE : View.VISIBLE}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_category_update"/>

                <TextView
                    android:id="@+id/btn_category_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/main_color"
                    android:background="@drawable/shape_round_8"
                    android:text="@string/btn_category_modify_des"
                    android:visibility="@{recipeViewModel.isCategoryModify ? View.VISIBLE : View.GONE}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_category_modify"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_no_menu_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_trans"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/tv_no_menu_des"
                android:visibility="@{recipeViewModel.selectedCategory.menus.size() == 0 ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintTop_toBottomOf="@id/cl_category_name_with_menu_count"
                app:layout_constraintBottom_toTopOf="@id/btn_register_menu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_new_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_color"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:visibility="@{recipeViewModel.isCreate ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toTopOf="@id/rv_category_menu_list"
                app:layout_constraintTop_toBottomOf="@id/cl_category_name_with_menu_count">

                <TextView
                    android:id="@+id/tv_menu_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="start"
                    android:text="@string/tv_new_menu_item"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="새로운 메뉴" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_category_menu_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@id/btn_register_menu"
                app:layout_constraintTop_toBottomOf="@id/cl_new_item" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_register_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingStart="19dp"
                android:paddingEnd="19dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_oval_stroke"
                android:visibility="@{recipeViewModel.selectedCategory == null || recipeViewModel.isCreate ? View.GONE : View.VISIBLE}"
                app:layout_constraintTop_toBottomOf="@id/rv_category_menu_list"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/iv_add_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_bk_mdpi"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_register_menu"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_register_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/tv_register_menu"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_add_menu"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_menu_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="10dp"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintTop_toBottomOf="@id/cg_menu_categories"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/cl_category_with_menus"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_category_no_item"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="@{menuWithRecipe == null &amp;&amp; !recipeViewModel.isCreate ? View.VISIBLE: View.INVISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{(menuWithRecipe != null) || (menuWithRecipe == null &amp;&amp; recipeViewModel.isCreate) ? View.VISIBLE: View.INVISIBLE}">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_menu_name_and_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintBottom_toTopOf="@id/nst_register_menu_section"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_menu_name"
                        setEditTextStyleByIsModify="@{recipeViewModel.isModify || recipeViewModel.isCreate}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:backgroundTint="@{recipeViewModel.isModify || recipeViewModel.isCreate ? @color/main_trans : @color/white}"
                        android:hint="@string/edt_register_menu_name"
                        android:maxLength="15"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="@{menuWithRecipe.menuName}"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@null"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/cl_menu_price"
                        app:layout_constraintHorizontal_weight="5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        tools:text="@string/edt_register_menu_name" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_menu_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="2"
                        app:layout_constraintStart_toEndOf="@id/edt_menu_name"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_menu_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:hint="@string/edt_register_menu_price"
                            android:maxLength="15"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="@{Formatter.INSTANCE.getStringBaseCurrencyUnit(menuWithRecipe.price.toString())}"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textCursorDrawable="@null"
                            setEditTextStyleByIsModify="@{recipeViewModel.isModify || recipeViewModel.isCreate}"
                            android:backgroundTint="@{recipeViewModel.isModify || recipeViewModel.isCreate ? @color/main_trans : @color/white}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tv_price_unit_des"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="6,000" />

                        <TextView
                            android:id="@+id/tv_price_unit_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_price_unit"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/edt_menu_price"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nst_register_menu_section"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@id/cl_menu_btns"
                    app:layout_constraintTop_toBottomOf="@id/cl_menu_name_and_price">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/divider_menu_recipe_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/main_trans"
                            android:layout_marginTop="15dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/tv_register_recipe_des" />

                        <TextView
                            android:id="@+id/tv_register_recipe_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="15dp"
                            android:text="@string/tv_register_recipe_des"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/cl_menu_recipe_section"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/divider_menu_recipe_section" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_menu_recipe_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            app:layout_constraintBottom_toTopOf="@id/divider_menu_option_section"
                            app:layout_constraintTop_toBottomOf="@id/tv_register_recipe_des">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_search_stock"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                app:startIconDrawable="@drawable/ic_search_no_background_mdpi"
                                app:endIconMode="clear_text"
                                app:boxStrokeColor="@color/main_trans"
                                app:boxBackgroundColor="@color/white"
                                android:hint="@string/sv_search_stock"
                                android:visibility="@{recipeViewModel.isCreate || recipeViewModel.isModify ? View.VISIBLE : View.GONE}"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/cl_recipe_col_des">

                                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                    android:id="@+id/act_search_stock"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_recipe_col_des"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                app:layout_constraintTop_toBottomOf="@id/til_search_stock">

                                <TextView
                                    android:id="@+id/tv_recipe_name_des"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_recipe_name_des"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/tv_recipe_amount_des"
                                    app:layout_constraintHorizontal_weight="5"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tv_recipe_amount_des"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_recipe_amount_des"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="10dp"
                                    android:gravity="start"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="@id/tv_recipe_unit_des"
                                    app:layout_constraintHorizontal_weight="2"
                                    app:layout_constraintStart_toEndOf="@id/tv_recipe_name_des"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tv_recipe_unit_des"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_recipe_unit_des"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="10dp"
                                    android:gravity="start"
                                    android:layout_marginEnd="24dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_weight="2"
                                    app:layout_constraintStart_toEndOf="@id/tv_recipe_amount_des"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <TextView
                                android:id="@+id/tv_no_menu_recipe_des"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_no_menu_recipe_des"
                                android:textColor="@color/main_trans"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="10dp"
                                android:visibility="@{recipeViewModel.recipeMapForNewMenu.size > 0 || menuWithRecipe.recipe.size() > 0 ? View.INVISIBLE : View.VISIBLE}"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/cl_recipe_col_des" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_menu_recipe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:nestedScrollingEnabled="false"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/cl_recipe_col_des"
                                app:layout_constraintVertical_bias="1.0"
                                tools:layout_editor_absoluteX="0dp" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/divider_menu_option_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/main_trans"
                            android:layout_marginTop="15dp"
                            app:layout_constraintBottom_toTopOf="@id/tv_register_menu_option_des"
                            app:layout_constraintTop_toBottomOf="@id/cl_menu_recipe_section" />

                        <TextView
                            android:id="@+id/tv_register_menu_option_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="15dp"
                            android:text="@string/tv_register_option_des"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/cl_menu_option_section"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/divider_menu_option_section" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_menu_option_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            app:layout_constraintBottom_toTopOf="@id/divider_menu_cost"
                            app:layout_constraintTop_toBottomOf="@id/tv_register_menu_option_des">

                            <TextView
                                android:id="@+id/tv_no_menu_option_des"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_no_menu_option_des"
                                android:textColor="@color/main_trans"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="25dp"
                                android:visibility="@{menuWithRecipe.option.size() == 0 &amp;&amp; menuWithRecipe != null ? View.VISIBLE : View.INVISIBLE}"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_menu_options"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:nestedScrollingEnabled="false"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/divider_menu_cost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/main_trans"
                            android:layout_marginTop="15dp"
                            app:layout_constraintBottom_toTopOf="@id/tv_menu_cost_des"
                            app:layout_constraintTop_toBottomOf="@id/cl_menu_option_section" />

                        <TextView
                            android:id="@+id/tv_menu_cost_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="15dp"
                            android:text="@string/tv_menu_cost_des"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/menu_cost_line_chart"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/divider_menu_cost" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/menu_cost_line_chart"
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@color/back_color"
                            app:layout_constraintTop_toBottomOf="@id/tv_menu_cost_des"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.core.widget.NestedScrollView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_menu_btns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nst_register_menu_section">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_modify_recipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_round_stroke"
                        android:paddingStart="30dp"
                        android:paddingTop="9dp"
                        android:paddingEnd="30dp"
                        android:paddingBottom="9dp"
                        android:text="@string/btn_modify_menu"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="@{recipeViewModel.isModify || recipeViewModel.isCreate ? View.GONE : View.VISIBLE}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_delete_recipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/shape_round_8"
                        android:backgroundTint="@color/main_color"
                        android:paddingStart="50dp"
                        android:paddingTop="9dp"
                        android:paddingEnd="50dp"
                        android:paddingBottom="9dp"
                        android:text="@string/btn_delete_menu"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="@{recipeViewModel.isModify || recipeViewModel.isCreate ? View.GONE : View.VISIBLE}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btn_modify_recipe"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_round_stroke"
                        android:paddingStart="30dp"
                        android:paddingTop="9dp"
                        android:paddingEnd="30dp"
                        android:paddingBottom="9dp"
                        android:text="@string/btn_cancel"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="@{recipeViewModel.isModify || recipeViewModel.isCreate ? View.VISIBLE : View.GONE}"
                        app:layout_constraintEnd_toStartOf="@id/btn_register_recipe"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_register_recipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/shape_round_8"
                        android:backgroundTint="@color/main_color"
                        android:paddingStart="50dp"
                        android:paddingTop="9dp"
                        android:paddingEnd="50dp"
                        android:paddingBottom="9dp"
                        android:text="@string/btn_register_menu"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="@{recipeViewModel.isModify || recipeViewModel.isCreate ? View.VISIBLE : View.GONE}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btn_cancel"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>