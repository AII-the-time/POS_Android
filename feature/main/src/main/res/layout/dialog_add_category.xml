<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".recipe.AddCategoryDialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_round_10"
        android:backgroundTint="@color/white"
        android:paddingStart="50dp"
        android:paddingBottom="50dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tv_add_category_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_add_category_des"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/edt_category_name"
            app:layout_constraintEnd_toStartOf="@id/btn_close_add_category_dialog"/>


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_close_add_category_dialog"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_system_close_bk_mdpi"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="20dp"
            tools:ignore="SpeakableTextPresentCheck"/>
        
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edt_category_name"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:maxLength="15"
            android:backgroundTint="@color/main_color"
            android:paddingTop="20dp"
            android:layout_marginEnd="50dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="65dp"
            app:layout_constraintStart_toStartOf="@id/tv_add_category_des"
            app:layout_constraintEnd_toEndOf="@id/tv_add_category_des"
            app:layout_constraintTop_toBottomOf="@id/tv_add_category_des"
            app:layout_constraintBottom_toTopOf="@id/btn_add_category"/>
        
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="@string/tv_add_category_des"
            android:background="@drawable/shape_round_stroke"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="85dp"
            android:paddingEnd="85dp"
            app:layout_constraintTop_toBottomOf="@id/edt_category_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_add_category_des"
            app:layout_constraintEnd_toEndOf="@id/tv_add_category_des"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>