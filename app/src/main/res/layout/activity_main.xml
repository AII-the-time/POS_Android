<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/layout_app_bar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/top_app_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menu="@menu/top_app_bar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/pb_sales">

                        <TextView
                            android:id="@+id/tv_current_sales"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/tv_current_sales_value"
                            app:layout_constraintBottom_toTopOf="@id/tv_target_sales"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="현재"/>

                        <TextView
                            android:id="@+id/tv_current_sales_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="225,000원"
                            android:layout_marginStart="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/tv_current_sales"
                            app:layout_constraintBottom_toBottomOf="@id/tv_current_sales"/>

                        <TextView
                            android:id="@+id/tv_target_sales"
                            app:layout_constraintTop_toBottomOf="@id/tv_current_sales"
                            app:layout_constraintRight_toRightOf="@id/tv_current_sales"
                            app:layout_constraintLeft_toLeftOf="@id/tv_current_sales"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="목표"/>

                        <TextView
                            android:id="@+id/tv_target_sales_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="225,000원"
                            android:layout_marginStart="10dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_current_sales_value"
                            app:layout_constraintLeft_toRightOf="@id/tv_current_sales"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ProgressBar
                        android:id="@+id/pb_sales"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/cl_sales"
                        app:layout_constraintBottom_toBottomOf="@id/cl_sales"
                        app:layout_constraintLeft_toRightOf="@id/cl_sales"
                        android:layout_marginStart="10dp"
                        android:padding="10dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="50"
                        android:progressTint="@color/white"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/cl_about_today"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_cloud"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_about_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <LinearLayout
                            android:id="@+id/linear_border1"
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/tv_date"
                            android:orientation="horizontal"
                            android:background="@color/white"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/linear_border2"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/white"/>

                        <LinearLayout
                            android:id="@+id/linear_border2"
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/tv_date"
                            android:layout_marginStart="10dp"
                            android:background="@color/white"
                            android:orientation="horizontal"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nav_host_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/layout_app_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:name="androidx.navigation.fragment.NavHostFragment"
            app:navGraph="@navigation/nav_graph"
            app:defaultNavHost="true"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>