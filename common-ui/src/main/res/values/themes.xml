<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.POSAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/divider_gray</item>
        <item name="colorOnPrimary">@color/divider_gray</item>
        <item name="chipStyle">@style/Widget.App.SelectedChip</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.POSAndroid" parent="Base.Theme.POSAndroid" />
    <style name="CustomNavigationRailStyle">
        <item name="android:textSize">10sp</item>
    </style>
    <!-- chip   -->
    <style name="Widget.App.SelectedChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.SmallComponent</item>
        <item name="chipBackgroundColor">@drawable/selector_option_type_chip_item</item>
        <item name="android:textColor">@drawable/selector_option_type_chip_text</item>
    </style>

    <style name="Widget.App.CategoryChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/main_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.SmallComponent</item>
        <item name="chipBackgroundColor">@drawable/selector_category_chip_item</item>
        <item name="android:textColor">@drawable/selector_category_chip_text</item>
    </style>
    <!--  dialog for notification  -->
    <style name="Theme.DialogTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>